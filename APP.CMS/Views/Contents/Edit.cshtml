    function CreateUrl() {
        var date = new Date()
        var random = ""
        var hh = (date.getHours() < 10 ? '0' : '') + date.getHours();
        var mn = (date.getMinutes() < 10 ? '0' : '') + date.getMinutes();
        var sc = (date.getSeconds() < 10 ? '0' : '') + date.getSeconds();
        random = hh + mn + sc
        if (frmEdit.find('#txtTitle').val().length > 0) {
            frmEdit.find('#txtUrl').val(removeAccents(frmEdit.find('#txtTitle').val() + "-" + random));
        }
        else {
            frmEdit.find('#txtUrl').val('')
        }
    }
