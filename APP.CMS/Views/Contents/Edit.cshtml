    function update(imageUrl, imgWidth, imgHeight) {
        if (ValidateForm(frmEdit)) {
            return;
        }
        showLoading();
        var dateString = $('#frmEdit').find('#dtPublishedDate').val().replaceAll('/', '-');
        var publishedDate = moment(convertToDateTime(dateString)).format('YYYY-MM-DD HH:mm:ss');
        //var publishedDate = moment($('#frmEdit').find('#dtPublishedDate')).format("YYYY/MM/DD HH:mm:ss");
        $.ajax({
            url: urlDomain + "/update",
            method: "POST",
            data: {
                Id: frmEdit.find('#hdId').val(),
                Title: $('#frmEdit').find('#txtTitle').val(),
                Summary: $('#frmEdit').find('#txtSummary').val(),
                Content: $('#frmEdit').find('#txtContent').val(),
                Url: $('#frmEdit').find('#txtUrl').val(),
                //Source: $('#frmEdit').find('#txtSource').val(),
                Status: @((int)ContentStatusEnum.Approved),
                PublishDate: publishedDate,
                TitleImage: imageUrl,
                ContentType: $('#frmEdit').find('#dlContentType').val(),
                ShowOnTop: $('#frmEdit').find('#ckbShowOnTop').prop("checked") ? true : false,
                //ShowOnRightTop: $('#frmEdit').find('#ckbShowOnRightTop').prop("checked") ? true : false,
                GroupID: $('#frmEdit').find('#dlGroup').val(),
                CategoryId: $('#frmEdit').find('#dlCategoryContent').val(),
                TitleImgWidth: imgWidth,
                TitleImgHeight: imgHeight,
                NewsSource: $('#frmEdit').find('#dlNewsSource').val(),
                AuthorId: $('#frmEdit').find("#dlAuthor").val()
                //Reasons
                //RemovedDate
                //PublishDate
                //LangCode :
                //UpdatedBy :
            }
            , success: function (response) {
                hideLoading()
                if (response.result) {
                    // datasource = response.data
                    showAlert(response.message, 2)
                    hideContentModal()
                    setTimeout(function () { returnIndex(); howLoading(); }, 1500);
                } else {
                    showAlert(response.message)
                }
            }
        });
    }
