
@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="changePass">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <div id="login-form" class="form">
                        <h3 class="text-center font-weight-bold">Đổi mật khẩu</h3>
                        <div class="form-group">
                            <label for="password" class="font-weight-bold">Mật khẩu cũ</label><br>
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="font-weight-bold">Mật khẩu mới</label><br>
                            <input type="password" name="passwordnew" id="passwordnew" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="font-weight-bold">Nhập lại mật khẩu mới</label><br>
                            <input type="password" name="passwordnew2" id="passwordnew2" class="form-control">
                        </div>
                        <div class="form-group text-center">
                            <input type="button" name="login" class="btn btn-info btn-md" id="btnLogin" value="Thay đổi">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnLogin").off('click').on('click', function (e) {
            e.preventDefault();
            changePass();
        })
    })
    function changePass() {
        showLoading()
        $.ajax({
            url: "/tai-khoan/doi-mat-khau",
            method: "post",
            data: {
               
                Password: $("#password").val(),
                NewPass: $("#passwordnew").val()

            },
            success: function (response) {
                if (response.result) {
                    hideLoading();
                    showAlert(response.message, 2)
                }
                else {
                    hideLoading();
                    showAlert(response.message, 1)
                }
            }
        })
    }
</script>

