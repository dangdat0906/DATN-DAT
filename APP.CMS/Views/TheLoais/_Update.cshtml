@model APP.MODELS.Types
@using APP.UTILS
    <div id="frmUpdate" class="form-horizontal">
        <input type="hidden" value="@Model.Id" id="hdId" />
        <div class="form-group">
            <div class="row">
                <label class="col-sm-3" required>Tên thể loại</label>
                <div class="col-sm-8">
                    <input type="text" value="@Model.Name" required class="form-control" id="txtName" placeholder="Tên thể loại">
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-sm-3">Mô tả</label>
                <div class="col-sm-8">
                    <input type="text" value="@Model.Description"  class="form-control" id="txtDescription" placeholder="Mô tả">
                </div>
            </div>
        </div>
        @*<div class="form-group">
            <div class="row">
                <label required class="col-sm-3">Hệ số nhuận bút</label>
                <div class="col-sm-4">
                    <input type="number"  value="@Model.Coefficient" required name="price" min="0" pattern="^\d*(\.\d{0,2})?$" step="0.01" title="Currency" class="form-control" id="txtCoefficient" placeholder="Hệ số nhuận bút">
                </div>
            </div>
        </div>*@
        <div class="form-group">
            <div class="row">
                <label class="col-sm-2">Trạng thái</label>
                <div class="col-sm-4">
                    @{
                        if ((int)ViewData[nameof(RolesEnum.Approval)] == 1)
                        {
                            <input id="ckbStatus" type="checkbox" class="custom-control" value="@Model.Status">
                        }
                        else
                        {
                            <input id="ckbStatus" type="checkbox" disabled class="custom-control" value="@Model.Status">
                        }
                    }

                </div>
            </div>
        </div>
    </div>
<script>
    var frmUpdate = $('#frmUpdate');
    $(document).ready(function () {
        addRequired(frmUpdate);
        setStatus();
    });
    $(document).on('keydown', 'input[pattern]', function (e) {
        var input = $(this);
        var oldVal = input.val();
        var regex = new RegExp(input.attr('pattern'), 'g');

        setTimeout(function () {
            var newVal = input.val();
            if (!regex.test(newVal)) {
                input.val(oldVal);
            }
        }, 0);
    });
    $('#modal-form').find('#btnSave').off("click").on('click', function (e) {
        e.preventDefault();
        update();
    });
    function setStatus() {
        if (frmUpdate.find('#ckbStatus').val() == 1) {
            frmUpdate.find('#ckbStatus').prop('checked', true);
        }
    }
    function update() {
        if (ValidateForm(frmUpdate)) {
            return;
        }
        showLoading();
        $.ajax({
            url: urlDomain + "/create-or-update",
            method: "POST",
            data: {
                ID: frmUpdate.find('#hdId').val(),
                Name: frmUpdate.find('#txtName').val(),
                Description: frmUpdate.find('#txtDescription').val(),
                //Coefficient: frmUpdate.find("#txtCoefficient").val(),
                Status: frmUpdate.find('#ckbStatus').prop("checked") ? 1 : 0
            }
            , success: function (response) {
                hideLoading()
                if (response.result) {
                    // datasource = response.data
                    showAlert(response.message, 2)
                    getData("",-1);
                    hideContentModal()

                } else {
                    showAlert(response.message)
                }
            }
        })
    }
    function getData(name,status) {
        showLoading()
        $.ajax({
            url: urlDomain + "/get-list/?name=" + name + "&status=" + status,
            method: "GET",
            data: {
                title: frmFilter.find('#txtName').val(),
                take: take,
                skip: skip
            }
            , success: function (response) {
                $('#dtTable').html(response);
                hideLoading()
            }
        });
    }
</script>